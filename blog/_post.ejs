<a name="top"></a>

<section class="android-blog-section android-post-section">
  <% var post = public.blog._data[source] %>

  <header>
    <h1><%= title %></h1>

    <p class="meta">
      <time datetime="<%= post.date %>" pubdate="<%= post.pubdate %>">
        <% var date = new Date(post.date); %>
        <%= date.getDate() %>/<%= date.getMonth() + 1 %>/<%= date.getFullYear() %>
      </time>
    </p>
  </header>

  <%- yield %>

  <% if (post.speakerdeck) { %>
  <%- partial("../_partials/_speakerdeck", { id: post.speakerdeck }) %>
  <% } %>

  <%- partial("../_partials/_disqus") %>
</section>
